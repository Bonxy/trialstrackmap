{{#extend "default"}}
    {{#content "htmlCtrl"}}ng-controller="trackmap" data-without="worldrecords"{{/content}}

    {{#content "styles" mode="append"}}
        <link rel="stylesheet" type="text/css" href="main.css{{cacheBuster}}"/>
    {{/content}}

    {{#content "data-event"}}data:loaded{{/content}}

    {{#content "body"}}
        {{#with ../paintjobs}}
            <div style="white-space:nowrap;padding:0 5px;color:#fff;">
                {{bike-stats bikes}}
            </div>
            <div style="display:flex;">
            {{#each bikes}}
                <div style="display:inline-block;vertical-align:top;width:140px;" title="{{bikename @key ../../map.database.bikes}}">
                    <div style="white-space:nowrap;padding:0 5px;color:#fff;text-align:center;overflow:hidden;">
                        {{bikename @key ../../map.database.bikes}} ({{this.length}})
                    </div>
                    {{#each this}}
                    <div style="white-space:nowrap;" title="{{name}}">
                        <i class="paintjob paintjob-{{@../key}}-{{@key}}"></i>
                        <i class="paintjob-icon paintjob-icon-{{@../key}}-{{@key}}"></i>
                    </div>
                    {{/each}}
                </div>
            {{/each}}
            </div>
        {{/with}}
    {{/content}}
{{/extend}}